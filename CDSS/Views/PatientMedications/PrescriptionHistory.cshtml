@model IEnumerable<CDSS.Models.PatientMedication>

@{
    ViewData["Title"] = "Prescription History";
}

<!DOCTYPE html>
<html>
<head>
    <title>@ViewData["Title"]</title>
    <!-- Include any necessary CSS styles here -->
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Patient.FirstName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Patient.LastName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Patient.Birthdate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Patient.Ward)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Patient.Bed)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Patient.Weight)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Patient.BloodType)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Patient.MedicalCondition)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Dosage)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Frequency)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Duration)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.StartMedication)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.EndMedication)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Patient.MedicalCondition)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Dosage)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Frequency)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Duration)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.StartMedication)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EndMedication)
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <style>
        /* Add your CSS styles */
        /* For example: */
        body {
            font-family: Arial, sans-serif;
            background-color: #f5f5f5;
            margin: 20px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 20px;
        }

        th, td {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: left;
        }

        th {
            background-color: #f2f2f2;
        }
    </style>
</head>
<body>
    <h1>@ViewData["Title"]</h1>

    <table>
        <thead>
            <tr>
                <th>Medication Name</th>
                <th>Dosage</th>
                <th>Frequency</th>
                <th>Duration</th>
                <th>Start Date</th>
                <th>End Date</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var medication in Model)
            {
                <tr>
                    <td>@medication.Medication.MedicationName</td>
                    <td>@medication.Dosage</td>
                    <td>@medication.Frequency</td>
                    <td>@medication.Duration</td>
                    <td>@medication.StartMedication?.ToString("yyyy-MM-dd")</td>
                    <td>@(medication.EndMedication?.ToString("yyyy-MM-dd") ?? "N/A")</td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>
