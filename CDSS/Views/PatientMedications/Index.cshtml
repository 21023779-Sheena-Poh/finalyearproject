@model IEnumerable<CDSS.Models.PatientMedication>

@{
    ViewData["Title"] = "Index";
}

<style>
    body {
        background-color: lightblue;
    }
</style>

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Patient.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Patient.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Patient.Birthdate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Patient.Ward)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Patient.Bed)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Patient.Weight)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Patient.BloodType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Patient.MedicalCondition)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Medication.MedicationName)
            </th>
            
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Patient.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Patient.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Patient.Birthdate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Patient.Ward)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Patient.Bed)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Patient.Weight)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Patient.BloodType)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Patient.MedicalCondition)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Medication.MedicationName)
                </td>
                
                <td style="white-space: nowrap;">
                    <span style="display: inline-block;">
                        <a asp-action="Edit" asp-route-id="@item.PatientMedicationID">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.PatientMedicationID">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.PatientMedicationID">Delete</a>
                    </span>
                </td>
            </tr>
        }
    </tbody>
</table>
