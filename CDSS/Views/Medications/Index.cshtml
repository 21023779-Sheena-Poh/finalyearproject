@model IEnumerable<CDSS.Models.Medication>

@{
    ViewData["Title"] = "Index";
}
<style>
    body {
        background-color: lightblue;
    }

</style>
<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.MedicationName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Class)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MedicationName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Class)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.MedicationId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.MedicationId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.MedicationId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
