@model CDSS.Models.Patients

@{
    ViewData["Title"] = "New Patient";
}

<h1>New Patient</h1>

<h4>Patients</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="mb-3">
                <label asp-for="FirstName" class="form-label fw-bold fs-5"></label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="LastName" class="form-label fw-bold fs-5"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Birthdate" class="form-label fw-bold fs-5"></label>
                <input asp-for="Birthdate" class="form-control" type="date" />
                <span asp-validation-for="Birthdate" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Ward" class="form-label fw-bold fs-5"></label>
                <input asp-for="Ward" class="form-control" />
                <span asp-validation-for="Ward" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Bed" class="form-label fw-bold fs-5"></label>
                <input asp-for="Bed" class="form-control" />
                <span asp-validation-for="Bed" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Weight" class="form-label fw-bold fs-5"></label>
                <input asp-for="Weight" class="form-control" />
                <span asp-validation-for="Weight" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="BloodType" class="form-label fw-bold fs-5"></label>
                <select asp-for="BloodType" class="form-control">
                    <option value="A+">A+</option>
                    <option value="B+">B+</option>
                    <option value="O+">O+</option>
                    <option value="AB+">AB+</option>
                    <option value="A-">A-</option>
                    <option value="B-">B-</option>
                    <option value="O-">O-</option>
                    <option value="AB-">AB-</option>
                </select>
                <span asp-validation-for="BloodType" class="text-danger"></span>
            </div>


            <div class="form-group">
                <label class="control-label">Medical Conditions</label>
                <br />
                @if (ViewBag.AllMedicalConditions != null)
                {
                    var selectedConditionsList = (ViewBag.SelectedMedicalConditions as List<string>) ?? new List<string>();
                    foreach (var condition in ViewBag.AllMedicalConditions)
                    {
                        <label class="checkbox-inline">
                            <input type="checkbox" name="MedicalCondition" value="@condition" @(selectedConditionsList.Contains(condition) ? "checked" : "") />
                            @condition
                        </label>
                    }
                }
                <span asp-validation-for="MedicalCondition" class="text-danger"></span>
            </div>





            <br />
            <div class="mb-3">
                <button type="submit" class="btn btn-primary">Create</button>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
